import java.io.File;
import java.io.FileNotFoundException;
import java.io.PrintWriter;
import java.io.UnsupportedEncodingException;



public class AITester {
	public static void main(String[] args){
		for(int j = 0;j<5;j++){
			System.out.println("New Test");
			int i = 0;
			double a1 = Math.random();
			System.out.println("a1: " + a1);
			double a2 = Math.random()*2-1;
			System.out.println("a2: " + a2);
			double average = 0;
			while(i<5){
				GameTester gt = new GameTester();
				//set AI coefficients
				for(Ghost g:gt.m.getGhosts()){
					g.a1 = a1;
					g.a2 = a2;
				}
				gt.mv.keypress();
				boolean loop = true;
				while(loop){
					System.out.print("");
					if(gt.mv.end){
						System.out.println("Score: " + gt.m.getScore());
						average = (average*i+gt.m.getScore())/(i+1);
						loop = false;
					}
				}
				i++;
			}
			System.out.println("Average: " + average);
			print(a1, a2, average);
		}
	}
	
	public static void print(double a1,double a2, double average){
		PrintWriter writer;
		try {
			writer = new PrintWriter("data.txt", "UTF-8");
			writer.println(a1 + " " + a2 + " " + average);
			writer.close();
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (UnsupportedEncodingException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}
}
